<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/detail_music_img"
                android:layout_width="wrap_content"
                android:layout_height="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:contentDescription="music image"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/detail_music_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_music_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
        />

        <TextView
                android:id="@+id/detail_music_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_music_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
        />

        <TextView
                android:id="@+id/detail_music_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_music_artist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
        />

        <TextView
                android:id="@+id/detail_music_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_music_duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
        />

        <TextView
                android:id="@+id/detail_music_playcount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_music_url"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
        />

        <Button
            android:id="@+id/add_playlist"
            android:text="ADD TO PLAYLIST"
            android:textSize="20sp"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_music_playcount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
        <Button
                android:id="@+id/delete_playlist"
                android:text="Delete"
                android:textSize="20sp"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_playlist"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
        <Button
                android:id="@+id/get_similar"
                android:text="Get Similar Artists"
                android:textSize="20sp"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/delete_playlist"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>